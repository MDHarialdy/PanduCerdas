<!-- res/drawable/button_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/white" /> <!-- Button background color -->

    <stroke
        android:width="2dp"
        android:color="@color/blue" /> <!-- Border color and width -->

    <corners android:radius="8dp" /> <!-- Corner radius -->

    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="8dp"
        android:bottom="8dp" /> <!-- Padding inside the button -->
</shape>
