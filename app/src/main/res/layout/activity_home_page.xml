<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".ui.HomePageActivity">

    <!-- Image or Illustration -->
    <ImageView
        android:id="@+id/illustration_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/icon_login"
        android:scaleType="centerInside"
        android:layout_marginBottom="16dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transform Speech into Text Effortlessly"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"/>

    <!-- Description -->
    <TextView
        android:id="@+id/description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capture every detail with RecogNotes. Record conversations, lectures, meetings, and more, and watch as they are transcribed into accurate text instantly."
        android:textSize="14sp"
        android:textColor="#666666"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"/>


    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/register_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Login Admin"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/blue"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/signin_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Login User"
            android:textColor="@color/blue"
            android:backgroundTint="#FFFFFF" />

    </LinearLayout>

</LinearLayout>
